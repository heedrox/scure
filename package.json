{
  "name": "scure",
  "version": "1.1.0",
  "description": "Script Creation Utilities for Conversational Adventures (as Ric Escape)",
  "author": "Jordi Mart√≠",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/jmarti-theinit/scure.git"
  },
  "main": "index.js",
  "keywords": [
    "scure",
    "adventures",
    "adventure",
    "conversational",
    "text adventure",
    "conversational adventure",
    "ric escape"
  ],
  "dependencies": {
    "pluralize": "^7.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "eslint": "^4.12.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-html": "^4.0.3",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.7.0",
    "mocha": "^5.1.1",
    "npm-watch": "^0.3.0",
    "pre-commit": "^1.2.2",
    "sinon": "^4.5.0",
    "sinon-chai": "^3.0.0"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "mocha --require test/common.js --require source-map-support/register 'test/*.spec.js' test/**/*.spec.js",
    "tdd": "npm-watch test"
  },
  "pre-commit": [ "lint" ],
  "watch": {
    "test": {
      "patterns": [
        ".",
        "app",
        "data",
        "intents",
        "lib",
        "scure"
      ],
      "extensions": "js",
      "quiet": true,
      "legacyWatch": true,
      "delay": 1000,
      "inherit": true
    }
  }
}
